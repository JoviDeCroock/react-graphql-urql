import React from 'react';
import { Col, Divider, Row } from 'antd';

import UserTitle from 'ui/User/UserTitle';

interface UserProperties {

}

const User: React.FC<UserProperties> = ({ route }) => {

  const parseInt = new ParseInt(route.match.params.user_id);
  const { current: user_id } = useRef(parseInt.parse());
  const { state, setName, setStatus } = useUser(user_id);

  if (state.notFound) { return <Error404 />; }
  if (!state.loaded) { return <Loading />; }

  return (
    <div className='content-width'>
      <UserTitle {...{
        name: user.fullName,
        emailVerified: user.emailVerified,
        userStatusID: 'active',
      }}
      />
      <Divider />
      <Row gutter={16}>
        <Col span={6}>
        </Col>
        <Col span={18}>
        </Col>
      </Row>
    </div>
  );
};

export default User;
